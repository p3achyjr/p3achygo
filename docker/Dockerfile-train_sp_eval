FROM gcr.io/p3achygo/p3achygo_base:latest
ARG RUN_ID

RUN mkdir -p /tmp/p3achygo
WORKDIR /app

RUN ./sh/build_sp_container.sh
RUN ./sh/build_eval_container.sh
ENTRYPOINT ["sh", "-c", "python", "-m", "python.rl_loop.train_sp_eval", \
  "--sp_bin_path=/app/bazel-bin/cc/selfplay/main", \
  "--eval_bin_path=/app/bazel-bin/cc/eval/main", "--run_id=$RUN_ID"]
